<?xml version="1.0" encoding="utf-8"?>
<page>
	<% if @chapter %>
	<header><%= @chapter.chaptername %></header>
	<content>
		<% @texts.each do |t| -%>
		<text><%= t.chomp -%></text>
		<% end -%>
	</content>
	<menu>
		<link><text>1. 下一章</text><url>/books/<%= @chapter.book_id %>/chapter/<%= @chapter.chapterorder - 1 %></url></link>
		<link><text>2. 上一章</text><url>/books/<%= @chapter.book_id %>/chapter/<%= @chapter.chapterorder + 1 %></url></link>
		<link><text>3. 查看目录</text><url>/books/<%= @chapter.book_id %>/catalog</url></link>
		<link><text>4. 搜索图书</text><url>CMD_SEARCH</url></link>
		<link><text>5. 返回首页</text><url>home</url></link>
	</menu>
	<rightkey>
		<text>下一章</text><url>/books/<%= @chapter.book_id%>/chapter/<%= @chapter.chapterorder + 1 %></url>
	</rightkey>
	<% end %>
</page>