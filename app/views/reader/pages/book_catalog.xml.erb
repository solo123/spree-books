<?xml version="1.0" encoding="utf-8"?>
<page>
	<header>目录《<%= @book.bookname %>》</header>
	<content>
		<link><text>《<%= @book.bookname %>》封面</text><url>books/<%= @book.id %></url></link>
		<% @book.book_chapters.each do |ch| -%>
		<link>
			<arrow>1</arrow>
			<text><%= ch.chaptername %></text>
			<url>books/<%= @book.id %>/chapter/<%= ch.id %></url>
		</link>
		<% end -%>
	</content>
</page>