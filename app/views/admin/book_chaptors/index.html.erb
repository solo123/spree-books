<%= render :partial => 'admin/shared/book_sub_menu' %>

<div class='toolbar'>
  <ul class='actions'>
    <li id="new_book_chaptor_link">
      <%= button_link_to t("new_book_chaptor"), new_object_url %>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1><%= "#{t("actions.listing")} #{t("book_chaptors")}" %></h1>

<table class="index">
	<thead>
		<tr>
			<th>Name</th>
			<th>length</th>
			<th>page</th>
			<th>OP</th>

		</tr>
	</thead>
	<tbody>
		<% collection.each do |bc| %>
		<tr>
			<td><%= bc.id %></td>
			<td><%= bc.chaptorname %></td>
			<td><%= bc.length %></td>
			<td><%= bc.page %></td>

			<td class="actions">

		        <%= link_to_edit bc %>
		        &nbsp;
		        <%= link_to_clone bc %>
		        &nbsp;
		        <%= link_to_delete bc %>

    		</td>
		</tr>
		<% end %>
	</tbody>
</table>
<%#= will_paginate(:previous_label => "&#171; #{t('previous')}", :next_label => "#{t('next')} &#187;") %>

