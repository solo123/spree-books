<fieldset>

  <%= f.field_container :channel do %>
    <%= f.label :channel, t("title") %> <span class="required">*</span><br />
    <%= f.text_field :channel, :class => 'fullwidth title'  %>
    <%= f.error_message_on :channel %>
  <% end %>

  <div class="yui-gb">
    <div class="yui-u first">
      <%= f.field_container :company_id do %>
        <%= f.label :company_id, '公司'%><br />
        <%= f.text_field :company_id  %>
        <%= f.error_message_on :company_id%>
      <% end %>
      <%= f.field_container :title do %>
        <%= f.label :title, '名称'%><br />
        <%= f.text_field :title  %>
        <%= f.error_message_on :title%>
      <% end %>
      <%= f.field_container :description do %>
        <%= f.label :description, '说明' %><br />
        <%= f.text_field :description  %>
        <%= f.error_message_on :description%>
      <% end %>
    </div>
    <div class="yui-u">
    </div>
  </div>
</fieldset>
