<%= render :partial => 'admin/shared/book_sub_menu' %>

<h1>(id: <%= @book.id %>) <%= @book.bookname %></h1>

<div class='toolbar'>
  <ul class='actions'>
    <li id="new_book_chapter_link">
      <%= button_link_to t("new_book_chapter"), '/admin/book_chapters/new' %>
    </li>
  </ul>
  <br class='clear' />
</div>
<table class="index">
	<thead>
		<tr>
			<th>Name</th>
			<th>length</th>
			<th>page</th>
			<th>OP</th>

		</tr>
	</thead>
	<tbody>
		<% BookChapter.find_all_by_book_id(@book.id).each do |bc| %>
		<tr>
			<td><%= bc.id %></td>
			<td><%= bc.chaptername %></td>
			<td><%= bc.length %></td>
			<td><%= bc.page %></td>

			<td class="actions">
				<a href="../book_chapters/<%= bc.id %>/edit">Edit</a>
		        &nbsp;
    		</td>
		</tr>
		<% end %>
	</tbody>
</table>


<%= render :partial => 'admin/shared/show_resource_links' %>