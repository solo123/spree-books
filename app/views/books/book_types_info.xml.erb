<?xml version="1.0" encoding="utf-8"?>
<Books>
	<% @book_types.limit(@types_num).each do |t| 
	   books = t.books.order('hot desc').limit(@books_num)
		 if books.count > 0
		   books.each do |book|
	-%>
	<Book>
		<BOOKTYPEID><%= t.id %></BOOKTYPEID>
		<BOOKTYPE><%= t.name %></BOOKTYPE>
		<BOOKID><%= book.id %></BOOKID>
		<BOOKNAME><%= book.bookname %></BOOKNAME>
	</Book>
	<%   end
	   end
	 end 
	-%>
</Books>