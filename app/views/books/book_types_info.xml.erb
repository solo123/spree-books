<?xml version="1.0" encoding="utf-8"?>
<Books>
	<% @book_types.each do |t| 
	   books = t.books.limit(2)
		 if books.count > 0
		   books.each do |book|
	-%>
	<Book>
		<BOOKTYPEID><%= t.id %></BOOKTYPEID>
		<BOOKTYPE><%= t.name %></BOOKTYPE>
		<BOOKID><%= book.id %></BOOKID>
		<BOOKNAME><%= book.bookname %></BOOKNAME>
	</Book>
	<%   end
	   end
	 end 
	-%>
</Books>